{%- for post in collections.featuredPosts | reverse -%}
<article class="mb-4">
    <div class="entry-content">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <div class="row">
            <div class="col-md-3 col-lg-4">
                {%- first_image post -%}
            </div>
            <div class="col-md-9 col-lg-8">
                <p>
                    {%- if post.data.excerpt -%}
                        {{ post.data.excerpt }} 
                    {%- else -%}
                        {{ post.templateContent.slice(0, 1000) | striptags}}... 
                    {%- endif -%}
                    &nbsp;<span class="pl-2"><a href="{{ post.url }}" class="link-primary">Read more</a></span>
                </p>
            </div>
        </div>
    </div>
</article>
{%- endfor -%}